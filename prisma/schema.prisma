generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Role {
  ADMIN
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  avatar   String?
  role     Role    @default(ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          Int        @id @default(autoincrement())
  title       String     @db.VarChar(255)
  slug        String     @unique @db.VarChar(255)
  status      PostStatus @default(DRAFT)
  category    String
  description String
  thumb       String

  liveUrl String?
  repoUrl String?

  startDate DateTime
  endDate   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([status])
  @@index([createdAt])
}

model Blog {
  id       Int        @id @default(autoincrement())
  title    String     @db.VarChar(255)
  slug     String     @unique @db.VarChar(255)
  status   PostStatus @default(DRAFT)
  excerpt  String     @db.VarChar(500)
  content  String
  category String
  thumb    String
  views    Int        @default(0)

  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([status])
  @@index([createdAt])
}
